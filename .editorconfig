# ============================================================
# === EditorConfig for Full-Stack Nx Monorepo ===============
# === https://editorconfig.org ================================
# ============================================================

root = true

# ============================================================
# === DEFAULT SETTINGS =======================================
# ============================================================

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ============================================================
# === MARKDOWN & TEXT FILES =================================
# ============================================================

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.txt]
trim_trailing_whitespace = false

# ============================================================
# === YAML & JSON (Config, K8s, CI) ==========================
# ============================================================

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

# ============================================================
# === TYPESCRIPT / JAVASCRIPT ================================
# ============================================================

[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = space
indent_size = 2

# ============================================================
# === CSS / SCSS / LESS ======================================
# ============================================================

[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# ============================================================
# === HTML / XML =============================================
# ============================================================

[*.{html,xml}]
indent_style = space
indent_size = 2

# ============================================================
# === JAVA ===================================================
# ============================================================

[*.java]
indent_style = space
indent_size = 4

# ============================================================
# === SHELL / BATCH SCRIPTS ==================================
# ============================================================

[*.{sh,bash}]
end_of_line = lf
indent_style = space
indent_size = 2

[*.bat]
end_of_line = crlf
indent_style = tab

# ============================================================
# === DOCKER & CONTAINER CONFIGS =============================
# ============================================================

[Dockerfile]
indent_style = space
indent_size = 2

[*.dockerfile]
indent_style = space
indent_size = 2

[*.dockerignore]
trim_trailing_whitespace = false

# ============================================================
# === KUBERNETES MANIFESTS ===================================
# ============================================================

[*.{k8s.yaml,k8s.yml}]
indent_style = space
indent_size = 2

[k8s/**/*.{yaml,yml}]
indent_style = space
indent_size = 2

# ============================================================
# === HELM CHARTS ============================================
# ============================================================

[helm/**/*.{yaml,tpl}]
indent_style = space
indent_size = 2

# ============================================================
# === TERRAFORM ==============================================
# ============================================================

[*.{tf,tfvars,hcl}]
indent_style = space
indent_size = 2

# ============================================================
# === GIT & EDITORCONFIG =====================================
# ============================================================

[*.{gitignore,gitattributes}]
trim_trailing_whitespace = false

[.editorconfig]
trim_trailing_whitespace = false

# ============================================================
# === NEST / NX / ESLINT / PRETTIER ==========================
# ============================================================

[nx.json]
indent_style = space
indent_size = 2

[*.{eslintrc,prettierrc}]
indent_style = space
indent_size = 2

[*.{eslintrc.json,prettierrc.json}]
indent_style = space
indent_size = 2

# ============================================================
# === CI/CD CONFIGS (GH Actions, GitLab, CircleCI) ===========
# ============================================================

[.github/**/*.yml]
indent_style = space
indent_size = 2

[.gitlab-ci.yml]
indent_style = space
indent_size = 2

[.circleci/config.yml]
indent_style = space
indent_size = 2

# ============================================================
# === MISC (ENV, LOCKFILES, ETC.) ============================
# ============================================================

[*.env]
end_of_line = lf
trim_trailing_whitespace = false

[*.lock]
end_of_line = lf

[*.tsbuildinfo]
indent_style = space
indent_size = 2
